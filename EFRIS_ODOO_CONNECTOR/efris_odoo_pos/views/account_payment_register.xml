<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_account_reg_payment_form_efris" model="ir.ui.view">
            <field name="name">account.payment.register.form.inherit.efris</field>
            <field name="model">account.payment.register</field>
            <field name="inherit_id" ref="account.view_account_payment_register_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='journal_id']" position="after">
                        <field name="is_reverse_payment" invisible="1"/>
                        <field name="efris_refund_reason"
                               attrs="{'invisible': [('is_reverse_payment','=', False)],
                                        'required': [('is_reverse_payment','!=', False)]}"/>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</odoo>
