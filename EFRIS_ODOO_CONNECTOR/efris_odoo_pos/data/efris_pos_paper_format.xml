<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="efris_pos_paper_format" model="report.paperformat" >
        <field name="name">EFRIS Paper Format</field>
        <field name="default" eval="False"/>
        <field name="format">custom</field>
        <field name="page_height">160</field>
        <field name="page_width">80</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">10</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">10</field>
        <field name="margin_right">10</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="dpi">0</field>
    </record>
    <record id="report_efris_invoice" model="ir.actions.report">
        <field name="name">EFRIS Invoice Receipt</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">efris_odoo_pos.efris_invoice_receipt_template</field>
        <field name="report_file">efris_odoo_pos.efris_invoice_receipt_template</field>
        <field name="print_report_name">'Incoice - %s' % object.name</field>
        <field name="paperformat_id" ref="efris_odoo_pos.efris_pos_paper_format"/>
        <field name="binding_model_id" ref="model_account_move"/>
        <field name="binding_type">report</field>
    </record>
</odoo>